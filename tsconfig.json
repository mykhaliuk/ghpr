{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "module": "esnext",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*", "src/**/*.json", "old/lib/api.ts", "old/index.ts"],
  "exclude": ["node_modules", "src/__tests__"]
}
